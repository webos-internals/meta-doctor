#!/bin/bash
# meta-verizon-preplus-2.2.4 script by Rod Whitby
# based on meta-meta script by Ed Cates
# modifications by 'andidendel' and 'John Steffes'
# intended to flash Verizon PrePlus phones with a working webOS 2.2.4 image
#  Your mileage may vary

[ -d scripts ] || { echo "Run the script from the meta-doctor directory, not the scripts directory" ; exit ; }

W224_JAR_URL="http://palm.cdnetworks.net/rom/pre2/p224rod12052011/wrep224rod/webosdoctorp224pre2wr.jar"
W210_JAR_URL="http://palm.cdnetworks.net/rom/preplus/p210r0d03142011/eudep210rod/webosdoctorp101ueu-wr.jar"
V224_JAR_URL="http://palm.cdnetworks.net/rom/manta/p224r0d12192011/wdmantaverizon/webosdoctorp224mantaverizon.jar"
V210_JAR_URL="http://palm.cdnetworks.net/rom/pre2/p210r0d08162011/ver1z0np210rod/webosdoctorp102verizonwireless.jar"

W224_FILE="webosdoctorp224pre2-wr-2.2.4.jar"
W210_FILE="webosdoctorp101ueu-wr-2.1.0.jar"
V224_FILE="webosdoctorp224mantaverizon-2.2.4.jar"
V210_FILE="webosdoctorp102verizonwireless-2.1.0.jar"

W224_BUILD="pre2-p224pre2-wr-2.2.4"
W210_BUILD="preplus-p101ueu-wr-2.1.0"
V224_BUILD="pre3-p224manta-verizon-2.2.4"
V210_BUILD="pre2-p102eww-verizon-2.1.0"

W224_MD5="ea0cb312cb92c1e4d7f1d70820923538"
W210_MD5="03566ac546d72c59d1cdc1af5a4da920"
V224_MD5="04648bca9d241bc0889ceaf5c8ddf790"
V210_MD5="b586ef0cd8a5b41aa926c4f6f96e1874"

PATIENT="test-verizon-preplus-2.2.4"

git="git"
wget="wget"
make="make"
java="java"
patch="patch"
tar="tar"
python="python"

case "`uname -s`" in
    "CYGWIN"* )
	echo "Using Cygwin on Windows is not a valid MetaDoctor option.  See the Wiki page and use WUBI instead."
	exit
	;;
    "Darwin" )
	tar=gnutar
	export COPYFILE_DISABLE=true
	export COPY_EXTENDED_ATTRIBUTES_DISABLE=true
	;;
esac

WEBOS_TARBALL="webOS.tar"
CARRIER_TARBALL="carrier.tar"
LEGACY_TARBALL="legacy.tar"
CUSTOM_ROOTFS="rootfs.tar"
SRC_CDMA_FW="roadrunnercdmafw.tar"
CDMA_FW="castlecdmafw.tar"
SRC_UMTS_FW="roadrunnerumtsfw.tar"
UMTS_FW="castleumtsfw.tar"

rm -f ${CDMA_FW} ${UMTS_FW} ${BUILD_INFO} ${INSTALLER_FW} ${CARRIER_TARBALL} ${LEGACY_TARBALL} ${CUSTOM_ROOTFS} ${CUSTOM_ROOTFS}.gz ${WEBOS_TARBALL}

for f in $git $wget $make $java $patch $python $tar ; do
	
    which $f > /dev/null || { echo "Cannot find $f.  Please install it." ; exit ; }

done

ARGS=
WR_IPKS=
WR2_IPKS=
VZW_IPKS=
VZW2_IPKS=

WR_IPKS="\
pmvoicecommand-*.ipk \
com.palm.app.mobilehotspot_*.ipk \
com.palm.app.skype_*.ipk \
crotestcastleplus-images_*.ipk \
audiod-config-eu_*.ipk \
"

WR2_IPKS="\
sweatshop-wr-castle_*.ipk \
"

VZW_IPKS="\
palmcustomizationinfo-verizon_*.ipk \
roadrunnercdmafw-verizon_*.ipk \
"

VZW2_IPKS="\
com.nim.vznavigator_*.ipk \
com.nim.app.vznavigator_*.ipk \
"


if [ "$1" = "--wifi-only" ] ; then
    ARGS="BYPASS_ACTIVATION=1 BYPASS_FIRST_USE_APP=1 DISABLE_MODEM_UPDATE=1"
    VZW_IPKS=
    VZW2_IPKS=
fi

VZW2_IPKS="${VZW2_IPKS} \
amazonservice_*.ipk \
com.palm.app.amazonstore_*.ipk \
"

ARGS="${ARGS} ENABLE_DEVELOPER_MODE=1 DISABLE_UPLOAD_DAEMON=1 DISABLE_UPDATE_DAEMON=0 CUSTOM_CARRIER_CHECK=Verizon CUSTOM_MODEL_CHECK=P101EWW CUSTOM_ROOTFS=${CUSTOM_ROOTFS}.gz CUSTOM_WEBOS_TARBALL=${WEBOS_TARBALL} CUSTOM_CARRIER_TARBALL=${CARRIER_TARBALL} PATIENT=${PATIENT} VERSION=2.1.0 DEVICE=preplus CARRIER=wr"

$make ${ARGS} settings

echo
echo "Your custom doctor file will be created at build/${PATIENT}/${W210_FILE}"
echo

mkdir -p downloads

[ ! -f downloads/${W224_FILE} ] && $wget -c ${W224_JAR_URL} -O downloads/${W224_FILE}
[ ! -f downloads/${W210_FILE} ] && $wget -c ${W210_JAR_URL} -O downloads/${W210_FILE}
[ ! -f downloads/${V224_FILE} ] && $wget -c ${V224_JAR_URL} -O downloads/${V224_FILE}
[ ! -f downloads/${V210_FILE} ] && $wget -c ${V210_JAR_URL} -O downloads/${V210_FILE}

[ $(md5sum downloads/${W224_FILE} | cut -d \  -f 1) != ${W224_MD5} ] && \
        echo "${W224_FILE} did not download properly.  Please run this script again." && \
        rm -f downloads/${W224_FILE} && exit
[ $(md5sum downloads/${W210_FILE} | cut -d \  -f 1) != ${W210_MD5} ] && \
        echo "${W210_FILE} did not download properly.  Please run this script again." && \
        rm -f downloads/${W210_FILE} && exit
[ $(md5sum downloads/${V224_FILE} | cut -d \  -f 1) != ${V224_MD5} ] && \
        echo "${V224_FILE} did not download properly.  Please run this script again." && \
        rm -f downloads/${V224_FILE} && exit
[ $(md5sum downloads/${V210_FILE} | cut -d \  -f 1) != ${V210_MD5} ] && \
        echo "${V210_FILE} did not download properly.  Please run this script again." && \
        rm -f downloads/${V210_FILE} && exit

# $make clobber

$make VERSION=2.2.4 DEVICE=pre2 CARRIER=wr unpack || exit
$make VERSION=2.1.0 DEVICE=preplus CARRIER=wr unpack || exit
$make VERSION=2.2.4 DEVICE=pre3 CARRIER=verizon unpack || exit
$make VERSION=2.1.0 DEVICE=pre2 CARRIER=verizon unpack || exit

cp build/${W224_BUILD}/webOS/nova-cust-image-roadrunner.rootfs.tar ${CUSTOM_ROOTFS}
gzip ${CUSTOM_ROOTFS}

cp build/${W210_BUILD}/resources/${WEBOS_TARBALL} ./

# Use the modem firmware from the Pre 2 - same comms board as Pre+
cp build/${V210_BUILD}/webOS/${SRC_CDMA_FW} ${CDMA_FW}
cp build/${W224_BUILD}/webOS/${SRC_UMTS_FW} ${UMTS_FW}
$tar -C ./ -f ./${WEBOS_TARBALL} --delete ./${CDMA_FW} || exit
$tar -C ./ -f ./${WEBOS_TARBALL} --append ./${CDMA_FW} || exit
$tar -C ./ -f ./${WEBOS_TARBALL} --delete ./${UMTS_FW} || exit
$tar -C ./ -f ./${WEBOS_TARBALL} --append ./${UMTS_FW} || exit

mkdir -p carrier

( cd build/${W210_BUILD}/carrier ; \
    $tar -c -f - installer.xml ${WR2_IPKS} ) | ( cd carrier ; $tar -x -v -f - )
( cd build/${W224_BUILD}/carrier ; \
    $tar -c -f - ${WR_IPKS} ) | ( cd carrier ; $tar -x -v -f - )
( cd build/${V210_BUILD}/carrier ; \
    $tar -c -f - ${VZW_IPKS} ) | ( cd carrier ; $tar -x -v -f - )
( cd build/${V224_BUILD}/carrier ; \
    $tar -c -f - ${VZW2_IPKS} ) | ( cd carrier ; $tar -x -v -f - )
( cd carrier ; $tar -c -f ../${CARRIER_TARBALL} installer.xml ${VZW_IPKS} ${VZW2_IPKS} ${WR_IPKS} ${WR2_IPKS})

rm -rf carrier

$make VERSION=2.1.0 DEVICE=preplus CARRIER=wr \
    EXTRA_ROOTFS_IPKGS="bootloader kernel-dev kernel-module-oprofile kernel-module-scsi-wait-scan luna-keymaps palmbuildinfo pmtpupdater baseimage camd-omap34xx camsrc-omap34xx castletpfw dspmon-omap34xx jpegdecodelib-omap34xx kernel-image-2.6.24-palm-joplin-3430 kernel-module-ecb kernel-module-ifb kernel-module-nbd kernel-module-pcbc marvell8686microap mm-isp omxclientlib-omap34xx palmaudiodecoder-omap34xx palmaudioencoder-omap34xx palmjpgencsink-omap34xx palmvideodecoder-omap34xx palmvideoencoder-omap34xx palmvideosink-omap34xx pmlegacyhcilinklayer pmmedia-omap34xx pmwifidriver tidspbridge-extra tidspbridge-lib tidspbridge-module tidspbridge-mpusamples tiopenmax-aacdec tiopenmax-aacenc tiopenmax-audiomanager tiopenmax-camera tiopenmax-clock tiopenmax-common tiopenmax-core tiopenmax-inst2 tiopenmax-jpegdec tiopenmax-jpegenc tiopenmax-lcml tiopenmax-mp3 tiopenmax-nbamrdec tiopenmax-pcmdec tiopenmax-policymanager tiopenmax-postproc tiopenmax-prepostproc tiopenmax-ram tiopenmax-resourcemanager tiopenmax-rmproxy tiopenmax-videodec tiopenmax-videoenc tisgxgfx tisocketnode-control-task tisocketnode-conversions tisocketnode-dfgm tisocketnode-h264dec tisocketnode-ipp tisocketnode-jpegdec tisocketnode-jpegenc tisocketnode-mp3 tisocketnode-mpeg4aacdec tisocketnode-mpeg4aacenc tisocketnode-mpeg4dec tisocketnode-mpeg4enc tisocketnode-nbamrdec tisocketnode-pcmdec tisocketnode-ringio tisocketnode-usn tisocketnode-vpp updatefsinfo bootie-images trenchcoat compcache" \
    EXTRA_ROOTFS_TARBALL=${LEGACY_TARBALL} extract-rootfs-ipkgs || exit

$make VERSION=2.1.0 DEVICE=preplus CARRIER=wr \
    EXTRA_ROOTFS_IPKGS="luna-prefs" \
    EXTRA_ROOTFS_TARBALL=luna210.tar extract-rootfs-ipkgs || exit

$make VERSION=2.2.4 DEVICE=pre2 CARRIER=wr \
    EXTRA_ROOTFS_IPKGS="luna-prefs" \
    EXTRA_ROOTFS_TARBALL=luna224.tar extract-rootfs-ipkgs || exit

mkdir -p luna210
cd luna210
$tar -x -f ../luna210.tar
cd ..
mkdir -p luna224
cd luna224
$tar -x -f ../luna224.tar
cp -r ../luna210/etc/prefs/properties/* ./etc/prefs/properties
head -n 8 ./usr/lib/ipkg/info/luna-prefs.md5sums > ./luna-prefs.md5sums
tail -n 5 ../luna210/usr/lib/ipkg/info/luna-prefs.md5sums >> ./luna-prefs.md5sums
tail -n 2 ./usr/lib/ipkg/info/luna-prefs.md5sums >> ./luna-prefs.md5sums
mv luna-prefs.md5sums ./usr/lib/ipkg/info/luna-prefs.md5sums
$tar -f ../${LEGACY_TARBALL} --append ./* || exit
cd ..
rm -rf luna210 luna224 luna210.tar luna224.tar



$make ${ARGS} \
    DELETE_ROOTFS_IPKGS="camd-omap36xx camsrc-omap36xx pmmedia-omap36xx tisgxgfx-roadrunner" \
    EXTRA_ROOTFS_IPKGS="bootloader kernel-dev kernel-module-oprofile kernel-module-scsi-wait-scan luna-keymaps palmbuildinfo pmtpupdater baseimage camd-omap34xx camsrc-omap34xx castletpfw dspmon-omap34xx jpegdecodelib-omap34xx kernel-image-2.6.24-palm-joplin-3430 kernel-module-ecb kernel-module-ifb kernel-module-nbd kernel-module-pcbc marvell8686microap mm-isp omxclientlib-omap34xx palmaudiodecoder-omap34xx palmaudioencoder-omap34xx palmjpgencsink-omap34xx palmvideodecoder-omap34xx palmvideoencoder-omap34xx palmvideosink-omap34xx pmlegacyhcilinklayer pmmedia-omap34xx pmwifidriver tidspbridge-extra tidspbridge-lib tidspbridge-module tidspbridge-mpusamples tiopenmax-aacdec tiopenmax-aacenc tiopenmax-audiomanager tiopenmax-camera tiopenmax-clock tiopenmax-common tiopenmax-core tiopenmax-inst2 tiopenmax-jpegdec tiopenmax-jpegenc tiopenmax-lcml tiopenmax-mp3 tiopenmax-nbamrdec tiopenmax-pcmdec tiopenmax-policymanager tiopenmax-postproc tiopenmax-prepostproc tiopenmax-ram tiopenmax-resourcemanager tiopenmax-rmproxy tiopenmax-videodec tiopenmax-videoenc tisgxgfx tisocketnode-control-task tisocketnode-conversions tisocketnode-dfgm tisocketnode-h264dec tisocketnode-ipp tisocketnode-jpegdec tisocketnode-jpegenc tisocketnode-mp3 tisocketnode-mpeg4aacdec tisocketnode-mpeg4aacenc tisocketnode-mpeg4dec tisocketnode-mpeg4enc tisocketnode-nbamrdec tisocketnode-pcmdec tisocketnode-ringio tisocketnode-usn tisocketnode-vpp updatefsinfo bootie-images trenchcoat compcache luna-prefs" \
    EXTRA_ROOTFS_TARBALL=${LEGACY_TARBALL} clobber-build settings all || exit

$java -jar build/${PATIENT}/${W210_FILE}

echo
echo "Your custom doctor file has been created at build/${PATIENT}/${W210_FILE}"
echo

rm -f ${CDMA_FW} ${UMTS_FW} ${BUILD_INFO} ${INSTALLER_FW} ${CARRIER_TARBALL} ${LEGACY_TARBALL} ${CUSTOM_ROOTFS} ${CUSTOM_ROOTFS}.gz ${WEBOS_TARBALL}
